<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_tree_ui.model.filesystem.root_path">%kernel.root_dir%</parameter>

    </parameters>

    <services>
        <!-- Phpcr Model !-->
        <service 
            id="cmf_tree_ui.model.phpcr" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Model\PhpcrModel"
            >
            <argument type="service" id="doctrine_phpcr.session"/>
        </service>

        <!-- PhpcrOdm Model !-->
        <service 
            id="cmf_tree_ui.model.phpcr_odm" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Model\PhpcrOdmModel"
            >
            <argument type="service" id="doctrine_phpcr"/>
            <argument type="service" id="cmf_tree_ui.metadata.factory"/>
        </service>

        <!-- Filesystem Model !-->
        <service 
            id="cmf_tree_ui.model.filesystem" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Model\FilesystemModel"
            >
            <argument>%cmf_tree_ui.model.filesystem.root_path%</argument>
            <argument type="service" id="filesystem"/>
        </service>

    </services>
</container>

