<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_tree_ui.phpcrodm_auto_route_listener_class">Symfony\Cmf\Bundle\RoutingAutoBundle\EventListener\AutoRouteListener</parameter>

    </parameters>

    <services>
        <service 
            id="cmf_tree_ui.model.phpcr_odm" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Model\PhpcrOdmModel"
            >
            <argument type="service" id="doctrine_phpcr"/>
            <argument type="service" id="cmf_tree_ui.node_factory"/>
        </service>

    </services>
</container>

