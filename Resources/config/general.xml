<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services 
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_tree_ui.node_factory">Symfony\Cmf\Bundle\TreeUiBundle\Tree\NodeFactory</parameter>

    </parameters>

    <services>
        <!-- Tree Factory -->
        <service 
            id="cmf_tree_ui.tree_factory" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Factory"
            >
            <argument type="service" id="service_container"/>
        </service>

        <!-- Node Factory -->
        <service 
            id="cmf_tree_ui.node_factory" 
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\NodeFactory"
            >
            <argument type="service" id="cmf_tree_ui.metadata.factory"/>
        </service>

        <!-- Tree Controller -->
        <service
            id="cmf_tree_ui.controller.tree"
            class="Symfony\Cmf\Bundle\TreeUiBundle\Controller\TreeController"
            >
            <argument type="service" id="cmf_tree_ui.tree_factory"/>
            <argument type="service" id="twig"/>
        </service>

        <!-- Url Generator: Default -->
        <service
            id="cmf_tree_ui.node.url_generator.default"
            class="Symfony\Cmf\Bundle\TreeUiBundle\Tree\Node\UrlGenerator\DefaultUrlGenerator"
            >
            <argument type="service" id="router"/>
        </service>

    </services>
</container>

